package groomton;

import java.util.Scanner;

public class Generator {
	
	public static void main(String[] args) throws Exception{
		Scanner sc=new Scanner(System.in);
		int n=Integer.parseInt(sc.nextLine());
		String[][] m=new String[n][n];
		for (int r = 0; r < n; r++) {
			m[r] = sc.nextLine().split(" ");
		}
		Line line=new Line(n,m);
		for (int r = 0; r < n; r++) {
			for (int c = 0; c < n; c++) {
				if(line.m[r][c].equals("1")) {
					line.connection(r, c);
					line.count++;
				}
			}
		}
		System.out.println(line.count);
		
	}
	public static class Line{
		public int n;
		public String[][] m;
		public int count=0;
		public int[] rd= {0,0,1,-1};
		public int[] cd= {1,-1,0,0};
		public Line(int n, String[][] m) {
			this.n=n;
			this.m=m;
		}
		public void connection(int r, int c) {
			if(m[r][c].equals("1")) {
				m[r][c]="0";
				for (int i = 0; i < 4; i++) {
					if(r+rd[i]>=0&r+rd[i]<n&c+cd[i]>=0&c+cd[i]<n) {
						connection(r+rd[i], c+cd[i]);
					}
				}
			}
		}
		
	}

}
