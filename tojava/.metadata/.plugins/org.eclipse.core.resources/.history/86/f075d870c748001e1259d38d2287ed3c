package groomton;

import java.util.ArrayList;
import java.util.Collections;
import java.util.Comparator;
import java.util.List;
import java.util.Scanner;

public class BuyFruit {
	public static class Pice{
		int prise;
		int cPice;
		public Pice(int prise, int cPice) {
			this.prise=prise;
			this.cPice=cPice;
		}
	}

	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		int n=sc.nextInt();
		int k=sc.nextInt();
		sc.nextLine();
		List<Pice> pices=new ArrayList<BuyFruit.Pice>();
		for(int i=0; i<k; i++) {
			int p=sc.nextInt();
			int c=sc.nextInt();
			sc.nextLine();
			int cPice=c/p;
			Pice pice=new Pice(p,cPice);
			pices.add(pice);
		}
		Collections.sort(pices,new Comparator<Pice>() {

			@Override
			public int compare(Pice o1, Pice o2) {
				
				return o1.cPice-o2.cPice;
			}
		});
		int leftover=k;
		int c=0;
		int i=0;
		while (leftover>0) {
			if(i>=n) {
				break;
			}
			Pice pice= pices.get(i);
			if(leftover>=pice.prise) {
				c+=pice.prise*pice.cPice;
			}else if (leftover<pice.prise) {
				c+=pice.prise*leftover;
			}
			leftover-=pice.prise;
			i++;
		}
		System.out.println(c);
		sc.close();
	}

}
