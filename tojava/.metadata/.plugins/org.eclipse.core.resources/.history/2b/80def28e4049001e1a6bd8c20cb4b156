package groomton;

import java.util.ArrayList;
import java.util.Collections;
import java.util.Comparator;
import java.util.List;
import java.util.Scanner;

public class BuyFruit {
	public static class Pice{
		Double prise;
		Double cPice;
		public Pice(Double prise, Double cPice) {
			this.prise=prise;
			this.cPice=cPice;
		}
	}

	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		int n=sc.nextInt();
		int k=sc.nextInt();
		List<Pice> pices=new ArrayList<Pice>();
		for(int i=0; i<n; i++) {
			sc.nextLine();
			Double p=sc.nextDouble();
			Double c=sc.nextDouble();
			Double cPice=c/p;
			Pice pice=new Pice(p,cPice);
			pices.add(pice);
		}
		Collections.sort(pices,new Comparator<Pice>() {

			@Override
			public int compare(Pice o1, Pice o2) {
				Double s=o2.cPice-o1.cPice;
				int result=(s>=0)?1:-1;
				
				return result;
			}
		});
		
		Double c=0.0;
		int i=0;
		while (k>0) {
			if(i>=n) {
				break;
			}
			Pice pice= pices.get(i);
			if(k>=pice.prise) {
				c+=pice.prise*pice.cPice;
			}else if (k<pice.prise) {
				c+=k*pice.cPice;
			}
			k-=pice.prise;
			i++;
		}
		System.out.println((long) Math.floor(c));
		sc.close();
	}

}
